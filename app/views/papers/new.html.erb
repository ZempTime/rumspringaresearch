<div class="row">
  <div class="col-md-6 col-offset-md-3">
    <%= form_for @paper do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
